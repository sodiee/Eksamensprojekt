        <Label x:Name="FærgeIDLbl" Content="ID" HorizontalAlignment="Left" Margin="554,163,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FærgeNavnLbl" Content="Navn" HorizontalAlignment="Left" Margin="554,189,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FærgeAntalBilerLbl" Content="Antal gæster" HorizontalAlignment="Left" Margin="554,241,0,0" VerticalAlignment="Top"/>
