        <TextBox x:Name="FærgeNavnTxt" HorizontalAlignment="Left" Margin="637,193,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FærgeIDTxt" HorizontalAlignment="Left" Margin="637,167,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="VisGæsterPåFærgeBtn" Content="Vis gæster" HorizontalAlignment="Left" Margin="358,315,0,0" VerticalAlignment="Top"/>
        <Button x:Name="VisBilerPåFærgeBtn" Content="Vis biler" HorizontalAlignment="Left" Margin="358,340,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
