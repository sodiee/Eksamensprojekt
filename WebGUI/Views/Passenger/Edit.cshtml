@model DTO.Model.Passenger

@{
    ViewBag.Title = "Edit gæst";
}

<h2>Edit gæst</h2>

<div>
    @using (Html.BeginForm("Edit", "Passenger", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.PassengerID)
        <div>
            @Html.LabelFor(model => model.PassengerID)
            @Html.DisplayFor(model => model.PassengerID)
        </div>
        <div>
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div>
            @Html.LabelFor(model => model.Gender)
            @Html.EditorFor(model => model.Gender)
            @Html.ValidationMessageFor(model => model.Gender)
        </div>
        <div>
            @Html.LabelFor(model => model.Age)
            @Html.EditorFor(model => model.Age)
            @Html.ValidationMessageFor(model => model.Age)
        </div>
        <div>
            @Html.LabelFor(model => model.Birthday)
            @Html.EditorFor(model => model.Birthday)
            @Html.ValidationMessageFor(model => model.Birthday)
        </div>
        <input type="submit" value="Opdater gæst" />
    }
    <br />
</div>
<p>
    @Html.ActionLink("Back", "Details", "Ferry", new { id = Model.FerryID }, null) |
</p>