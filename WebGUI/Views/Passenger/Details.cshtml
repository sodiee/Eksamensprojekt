@model DTO.Model.Passenger

<h2>Passenger Details</h2>

<div>
    <h4>Passenger ID: @Model.PassengerID</h4>
    @Html.HiddenFor(model => model.PassengerID)
    <div>
        @Html.LabelFor(model => model.Name)
        @Html.DisplayFor(model => model.Name)
    </div>

    <div>
        @Html.LabelFor(model => model.Gender)
        @Html.DisplayFor(model => model.Gender)
    </div>

    <div>
        @Html.LabelFor(model => model.Age)
        @Html.DisplayFor(model => model.Age)
    </div>

    <div>
        @Html.LabelFor(model => model.Birthday)
        @Html.DisplayFor(model => model.Birthday)
    </div>

</div>

@Html.ActionLink("Tilbage til færgeinfo", "Details", "Ferry", new { id = Model.FerryID }, null)
<br />
@Html.ActionLink("Opdater passager", "Edit", "Passenger", new { id = Model.PassengerID }, null)
@Html.ActionLink("Slet passageren", "Delete", new { id = Model.PassengerID, ferryId = Model.FerryID }, null)