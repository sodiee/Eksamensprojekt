@model DTO.Model.Passenger

@using (Html.BeginForm("AddNewPassenger", "Ferry", FormMethod.Post))
{
    <input type="hidden" name="id" value="@ViewBag.FerryID" />
 <!-- inkluder id som en skjult input -->

    <div>
        <label for="Name">Name:</label>
        @Html.TextBoxFor(model => model.Name)
    </div>
    <div>
        <label for="Gender">Gender:</label>
        @Html.TextBoxFor(model => model.Gender)
    </div>
    <div>
        <label for="Age">Age:</label>
        @Html.TextBoxFor(model => model.Age)
    </div>
    <div>
        <label for="Birthday">Birthday:</label>
        @Html.TextBoxFor(model => model.Birthday, new { type = "date" })
    </div>
    <button type="submit" class="btn btn-primary">Tilføj passager</button>
}